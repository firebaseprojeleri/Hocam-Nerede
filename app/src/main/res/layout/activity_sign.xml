<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelecegiyazanlar.hocamnerede.SignActivity">

    <RelativeLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="230dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/logo"/>


    </RelativeLayout>

    <include android:id="@+id/loginPanel" layout="@layout/fragment_sign_in" />

    <include android:id="@+id/registerPanel" layout="@layout/fragment_sign_up" android:visibility="invisible" />

    <include android:id="@+id/passwordResetPanel" layout="@layout/fragment_password_reset" android:visibility="invisible" />

</FrameLayout>
