<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_pager_background"
    android:layout_marginTop="210dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.gelecegiyazanlar.hocamnerede.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:customFont="Lato-Black.ttf"
            android:textSize="21sp"
            android:text="Sifremi Unuttum"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordResetMailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/mail_hint" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/passwordResetConfirm"
            android:text="@string/confirm"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_confirm"/>

        <com.gelecegiyazanlar.hocamnerede.views.CustomTextView
            android:id="@+id/showLoginViewFromPasswordReset"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Geri DÃ¶n"/>

    </LinearLayout>

</ScrollView>